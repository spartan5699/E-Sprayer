<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login"
    android:background="@drawable/img2">


    <EditText
        android:id="@+id/mobileno"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="421dp"
        android:background="#F7F7F2"
        android:ems="10"
        android:hint="  Enter Mobile Number"
        android:inputType="textPhonetic"
        android:textColor="#012502"
        android:textColorHighlight="#012502"
        android:textColorHint="#012502"
        android:textColorLink="#012502"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="211dp" />

    <EditText
        android:id="@+id/otp"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="248dp"
        android:background="#E6F0F5F0"
        android:ems="10"
        android:hint="  Enter OTP Received"
        android:inputType="number"
        android:textColor="#012502"
        android:textColorHighlight="#012502"
        android:textColorHint="#012502"
        android:textColorLink="#012502"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="329dp" />

    <Button
        android:id="@+id/get_otp"

        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"

        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="130dp"
        android:layout_marginRight="130dp"
        android:layout_marginBottom="358dp"
        android:background="@drawable/custombtn"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="25"
        android:soundEffectsEnabled="true"
        android:text="Get OTP"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <Button
        android:id="@+id/login"

        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"

        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="131dp"
        android:layout_marginRight="131dp"
        android:layout_marginBottom="184dp"
        android:background="@drawable/custombtn"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="25"
        android:soundEffectsEnabled="true"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="99dp"
        android:layout_marginRight="99dp"
        android:layout_marginBottom="535dp"
        app:srcCompat="@drawable/finallogo" />

</RelativeLayout>