<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/back3">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="500dp"
        android:focusable="auto"
        android:gravity="center_horizontal"
        android:text="Weather Monitoring and Analysis"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#0C1B00"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textSize="43sp"
        android:textStyle="bold"
        app:fontFamily="@font/cinzel_decorative_bold"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="58dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="87dp"
        android:layout_marginLeft="87dp"
        android:layout_marginEnd="86dp"
        android:layout_marginRight="86dp"
        android:layout_marginBottom="230dp"
        android:background="@drawable/finallogo"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="171dp"
        android:text="We Build Stronger Tomorrow..."
        android:textAlignment="center"
        android:textColor="#011401"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        android:visibility="visible"
        app:fontFamily="@font/bilbo_swash_caps"
        tools:visibility="visible"
        android:gravity="center_horizontal" />


</RelativeLayout>